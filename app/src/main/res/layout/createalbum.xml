<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/createAlbum_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="创建新图册"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/createAlbum_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createAlbum_title"
            android:layout_margin="10dp"
            android:hint="请输入图册名"
            android:textColorHint="@color/gray"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createAlbum_et">

            <Button
                android:background="#00000000"
                android:id="@+id/createAlbum_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="提交" />

            <CheckBox
                android:id="@+id/createAlbum_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/createAlbum_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否公开:"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/createAlbum_checkbox"
                android:textSize="15sp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>